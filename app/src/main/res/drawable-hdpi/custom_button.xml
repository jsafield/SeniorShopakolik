<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#C3D2D5" />
            <gradient  android:angle="-90"  android:startColor="#C3D2D5" android:endColor="#C3D2D5"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#776472" />
            <solid  android:color="#776472"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#21a3b4" />
            <gradient  android:angle="-90"  android:startColor="#21a3b4" android:endColor="#21a3b4" />
        </shape>
    </item>
</selector>