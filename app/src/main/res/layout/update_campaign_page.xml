<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/update_campaign_layout">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/brand_layout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/brand_logo"
                android:src="@mipmap/esteelaudericon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Stravardious"
                android:padding="15dp"
                android:id="@+id/brand_name" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/campaign_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/brand_layout"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignLeft="@+id/brand_layout"
            android:layout_alignStart="@+id/brand_layout"
            android:layout_alignRight="@+id/brand_layout"
            android:layout_alignEnd="@+id/brand_layout">


            <TextView
                android:id="@+id/campaign_start"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="Campaign Start : "
                android:gravity="center_vertical" />


            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/campaign_sdate"
                android:gravity="center_vertical" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datePickerS"
                android:src="@android:drawable/ic_menu_today"
                android:onClick="showDatePickerDialog" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/campaign_layout"
            android:layout_alignRight="@+id/campaign_layout"
            android:layout_alignEnd="@+id/campaign_layout"
            android:layout_alignLeft="@+id/campaign_layout"
            android:layout_alignStart="@+id/campaign_layout"
            android:id="@+id/campaign2_layout">

            <TextView
                android:id="@+id/campaign_finish"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:text="Campaign Finish : "
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/campaign_fdate"
                android:gravity="center_vertical" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/datePickerF"
                android:src="@android:drawable/ic_menu_today"
                android:onClick="showDatePickerDialog2" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/campaignType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/txt_layout"
            android:layout_alignLeft="@+id/txt_layout"
            android:layout_alignRight="@+id/txt_layout"
            android:layout_alignStart="@+id/txt_layout"
            android:layout_below="@+id/campaign2_layout"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/sales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discount"
                    android:checked="false"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/shoppingvoucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ShoppingVoucher"
                    android:textSize="12dp" />

                <RadioButton
                    android:id="@+id/otherbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="other"
                    android:textSize="12dp" />
            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/amount_percentage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/campaign2_layout"
            android:layout_alignLeft="@+id/campaign2_layout"
            android:layout_alignRight="@+id/campaign2_layout"
            android:layout_alignStart="@+id/campaign2_layout"
            android:layout_below="@+id/campaignType"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:gravity="right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="%"
                    android:textIsSelectable="false"
                    android:textSize="25dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="4"
                    android:gravity="right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="TL"
                    android:textIsSelectable="false"
                    android:textSize="18dp"></TextView>
            </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/campaign2_layout"
            android:layout_alignLeft="@+id/campaign2_layout"
            android:layout_alignRight="@+id/campaign2_layout"
            android:layout_alignStart="@+id/campaign2_layout"
            android:layout_below="@+id/amount_percentage"
            android:id="@+id/shopping_voucher"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Amount : "
                android:gravity="center_vertical" />
            <EditText
                android:id="@+id/voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="TL : "
                android:gravity="center_vertical"
                android:textSize="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description_Layout"
            android:layout_below="@+id/shopping_voucher"
            android:layout_alignRight="@+id/campaign2_layout"
            android:layout_alignEnd="@+id/campaign2_layout"
            android:layout_alignLeft="@+id/campaign2_layout"
            android:layout_alignStart="@+id/campaign2_layout"
            >

            <TextView
                android:id="@+id/description"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:text="Description : "
                android:gravity="center_vertical" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_layout"
            android:layout_below="@+id/description_Layout"
            android:layout_alignRight="@+id/description_Layout"
            android:layout_alignEnd="@+id/description_Layout"
            android:layout_alignLeft="@+id/campaign2_layout"
            android:layout_alignStart="@+id/campaign2_layout"
            android:weightSum="1">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/description_txt"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:maxLength="72" />
        </LinearLayout>


        <Button
            android:id="@+id/changeimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txt_layout"
            android:layout_alignLeft="@+id/txt_layout"
            android:layout_alignRight="@+id/txt_layout"
            android:layout_alignStart="@+id/txt_layout"
            android:layout_below="@+id/txt_layout"
            android:onClick="pickImageClicked"
            android:text="Change the Image" />


        <ImageView
            android:id="@+id/currentImageView"
            android:layout_width="288dp"
            android:layout_height="288dp"
            android:layout_alignEnd="@+id/changeimage"
            android:layout_alignLeft="@+id/changeimage"
            android:layout_alignRight="@+id/changeimage"
            android:layout_alignStart="@+id/changeimage"
            android:layout_below="@+id/changeimage" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txt_layout"
            android:layout_alignLeft="@+id/txt_layout"
            android:layout_alignRight="@+id/txt_layout"
            android:layout_alignStart="@+id/txt_layout"
            android:layout_below="@+id/currentImageView">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:id="@+id/save"
                android:layout_alignEnd="@+id/txt_layout"
                android:layout_alignLeft="@+id/txt_layout"
                android:layout_alignRight="@+id/txt_layout"
                android:layout_alignStart="@+id/txt_layout"
                android:layout_below="@+id/currentImageView"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>