<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView android:text="CATEGORIES"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#445894"
        android:id="@+id/categories_header" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categories_list"
        android:layout_below="@+id/categories_header"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="I'm ready"
        android:layout_below="@+id/categories_list"
        android:id="@+id/categories_submit_button"
        android:onClick="categoriesSubmitButtonClick"/>


</RelativeLayout>
