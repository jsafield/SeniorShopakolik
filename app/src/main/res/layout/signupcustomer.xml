<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <!--<TextView android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textColor="#445894"
        android:id="@+id/app_name"/>-->


    <LinearLayout
        android:id="@+id/linearLayoutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Name: "
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/customer_name_value"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="name"
            android:inputType="text"
            android:padding="5dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/app_name"
        android:layout_alignRight="@+id/app_name"
        android:layout_below="@+id/linearLayoutName"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/customer_surname"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Surname: "
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/customer_surname_value"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="surname"
            android:inputType="text"
            android:padding="5dp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/app_name"
        android:layout_alignRight="@+id/app_name"
        android:layout_below="@+id/linearLayoutSurname"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/customer_email"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Email: "
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/customer_email_value"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:padding="5dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/app_name"
        android:layout_alignRight="@+id/app_name"
        android:layout_below="@+id/linearLayoutEmail"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/customer_password"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Password: "
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/customer_password_value"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:padding="5dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutRePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/app_name"
        android:layout_alignRight="@+id/app_name"
        android:layout_below="@+id/linearLayoutPassword"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/customer_re_password"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Re-Password: "
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/customer_re_password_value"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:padding="5dp" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/buttonStyleSmall"
        android:layout_alignEnd="@+id/linearLayoutRePassword"
        android:layout_alignRight="@+id/linearLayoutRePassword"
        android:layout_below="@+id/linearLayoutRePassword"
        android:layout_marginTop="30dp"
        android:text="Submit"
        android:layout_alignLeft="@+id/linearLayoutRePassword"
        android:layout_alignStart="@+id/linearLayoutRePassword"
        android:onClick="submitButtonClick"/>

</RelativeLayout>
</ScrollView>