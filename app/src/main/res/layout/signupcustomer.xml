<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <TextView android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textColor="#445894"
        android:id="@+id/app_name"/>


    <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:id="@+id/linearLayoutName"
         android:layout_below="@+id/app_name"
         android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Name: "
             android:id="@+id/customer_name"
             android:padding="15dp"/>

        <EditText
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="name"
            android:ems="10"
            android:id="@+id/customer_name_value"
            android:padding="5dp"/>

     </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayoutSurname"
        android:layout_below="@+id/linearLayoutName"
        android:layout_alignRight="@+id/app_name"
        android:layout_alignEnd="@+id/app_name">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surname: "
            android:id="@+id/customer_surname"
            android:padding="15dp"/>

        <EditText
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="surname"
            android:ems="10"
            android:id="@+id/customer_surname_value"
            android:padding="5dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayoutEmail"
        android:layout_below="@+id/linearLayoutSurname"
        android:layout_alignRight="@+id/app_name"
        android:layout_alignEnd="@+id/app_name">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:id="@+id/customer_email"
            android:padding="15dp"/>

        <EditText
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="email"
            android:ems="10"
            android:id="@+id/customer_email_value"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayoutPassword"
        android:layout_below="@+id/linearLayoutEmail"
        android:layout_alignRight="@+id/app_name"
        android:layout_alignEnd="@+id/app_name">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password: "
            android:id="@+id/customer_password"
            android:padding="15dp"/>

        <EditText
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="password"
            android:ems="10"
            android:id="@+id/customer_password_value"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayoutRePassword"
        android:layout_below="@+id/linearLayoutPassword"
        android:layout_alignRight="@+id/app_name"
        android:layout_alignEnd="@+id/app_name">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Re-Password: "
            android:id="@+id/customer_re_password"
            android:padding="15dp"/>

        <EditText
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="password"
            android:ems="10"
            android:id="@+id/customer_re_password_value"
            android:padding="5dp"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@+id/linearLayoutRePassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>
</RelativeLayout>
