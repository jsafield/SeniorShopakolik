<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textColor="#445894"
        android:id="@+id/app_name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayoutName"
        android:layout_below="@+id/app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name: "
            android:id="@+id/shop_name"
            android:padding="15dp"/>

        <EditText
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="name"
            android:ems="10"
            android:id="@+id/customer_name_value"
            android:padding="5dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bilinmezlikler"
        android:text="KATEGORILERI VE LOCATIONLARI NASIL ALACAGIZ RAPORDAKI UYGUN DEGIL BENCE.
        LOGO NASIL OLACAK ONU DA ANLAMIS DEGILIM"
        android:layout_below="@+id/linearLayoutName"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@+id/bilinmezlikler"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

</RelativeLayout>

















